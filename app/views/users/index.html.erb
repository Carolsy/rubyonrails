<h3>All loggers</h3>
<% @users.each do |user| %>
  <ul>
    <li><%= link_to user.username, user_path(user) %>
    <%= pluralize(user.articles.count, "article") if user.articles %></li>
    <% if logged_in? and current_user.admin? %>
      <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?" } %>
    <% end %>
  </ul>
<% end %>
