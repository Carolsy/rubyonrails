<%if logged_in? %>
  <%= "ADMIN" if current_user.admin? %>
  <a class="dropdown-item" href="#"><li><%= link_to 'Log out', logout_path, method: :delete %></li></a>
  <a class="dropdown-item" href="#"><li><%= link_to "Edit your profile", edit_user_path(current_user) %></li></a>
  <a class="dropdown-item" href="#"><li><%= link_to "View your profile", user_path(current_user) %></li></a>
<% else %>
  <li><%= link_to 'Log in', login_path %></li>
  <li><%= link_to 'Sign up', signup_path %></li>
<% end %>
<h4>全部</h4>
<% @articles.each do |article| %>
  <%= article.title %>
  <small>created by: <%= article.user.username if article.user %></small>
  <small>created at: <%= article.created_at %></small>
  <small>last updated: <%= article.updated_at %></small>
  <%= link_to '編集', edit_article_path(article) %>
  <%= link_to '詳細', article_path(article) %>
  <%= link_to '消す', article_path(article), method: :delete, data:{confirm: '本当に?'} %>
  <br>
<% end %>
<%= link_to '新編', new_article_path %>
<%= link_to 'Signup', signup_path %>
<%= link_to 'Bloggers', users_path %>

