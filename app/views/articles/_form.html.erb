<%= form_for @article do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.submit %>
<% end %>
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |emsg| %>
     <%= emsg %>
  <% end %>
<% end %>